@using MvcStok.Models.Entity
@model List<TabloMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı: </b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <th>@mstr.MusteriID</th>
                <td>@mstr.MusteriAd</td>
                <td>@mstr.MusteriSoyad</td>
                <td><a href="/Musteri/MusteriGetir/@mstr.MusteriID" class="btn btn-success">GÜNCELLE</a></td>
                <td><a href="/Musteri/Sil/@mstr.MusteriID" class="btn btn-danger">SİL</a></td>
                <td>@Html.ActionLink("SİL", "Sil", new { id=mstr.MusteriID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteriEkle/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
